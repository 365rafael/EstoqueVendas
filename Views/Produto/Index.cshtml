@model IEnumerable<Produto>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Listagem de Produtos</h1>
        <div>
            <a class="btn btn-outline-primary mx-2" asp-controller="Produto" asp-action="Cadastrar">Cadastrar novo Produto</a>
            <a class="btn btn-outline-secondary mx-2" asp-controller="Home" asp-action="Index">Voltar</a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Produtos" class="table table-light table-hover mt-5 tabela-data-asc">
        <thead>
            <tr>
                <th scope="col">Produto</th>
                <th>Fornecedor</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var Produto in Model)
                {
                    <tr>
                        <td>@Produto.ProdutoNome</td>
                        <td>@Produto.Fornecedor.FornecedorNome</td>
                        <td><a asp-controller="Produto" asp-action="Editar" asp-route-id="@Produto.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a></td>
                        <td><a asp-controller="Produto" asp-action="Excluir" asp-route-id="@Produto.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a></td>
                    </tr>
                }

            }

        </tbody>
    </table>
</div>